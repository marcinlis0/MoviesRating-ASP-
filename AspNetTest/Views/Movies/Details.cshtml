@model AspNetTest.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

<div>
    <h4>@Model.Type.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Opis:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            Średnia ocen:
        </dt>
        <dd>
            @Helpers.CalcAverageRatings(Model.Comments)
        </dd>
        <dt>
            Ilość komentarzy:
        </dt>
        <dd>
            @Model.Comments.Count
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Wróc do listy filmów", "List")
</p>
<br /><br />
<h4>
    Komentarze (@Html.ActionLink("Dodaj komentarz", "Create", new { Controller = "Comments", id = Model.Id }))
</h4>
<hr />
@foreach (var comment in Model.Comments)
{
    @Helpers.DisplayComment(comment)
}